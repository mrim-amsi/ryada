@using ryada.Controllers
@model PagintingFooterModel
@{
    string prev = Model.Previous == "disabled" ? "false" : "true";
    string nxt = Model.Next == "disabled" ?  "false" : "true";
}
<a asp-action="Index" asp-route-pageNumber="@(Model.PageID - 1)" class="button is-link @(prev == "false"? "is-light": "")" onclick='return @prev'>
Previous
</a>
